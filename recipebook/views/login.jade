extends layout

block content
	h1.registerHeadline LOGIN
	.row
		form(method="post",action="/login").col.s12
			.row
				.input-field.col.s12
					input.validate(name='username',type='text', placeholder="Username")
			.row
				.input-field.col.s12
					input.validate(name='password',type='password', placeholder="Password")
			.row
				button.btn.waves-effect.waves-light(type='submit', name='action', value="Login")
					| Login