extends layout

block content
	h1.registerHeadline REGISTER
	h3.registerTagline Please register using the form below
	.row
		form(method='post',action='/register', enctype="multipart/form-data").col.s12
			.row
				.input-field.col.m2
					input.validate(name="name",type='text', placeholder="Name")
				.input-field.col.m4
					input.validate(name="email",type='email', placeholder="Email")
				.input-field.col.m6
					input.validate(name="username",type='text', placeholder="Username")
			.row
				.input-field.col.m6
					input.validate(name="password",type='password', placeholder="Password")
				.input-field.col.m6
					input.validate(name="password2",type='password', placeholder="Confirm Password")
			.row
				button.btn.waves-effect.waves-light(type='submit', name='action')
					| Register

			
